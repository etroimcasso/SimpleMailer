{
  "apps" : [{
    "name"        : "SimpleMailer",
    "script"      : "./server/server.js",
    "watch": ["./server", "./build"],
    "ignore_watch" : ["./node_modules", "./certs","./cli","./public","./src"],
    "watch_options": {
      "followSymlinks": false
    },
    "env": {
      "NODE_ENV": "development"
    },
    "env_production" : {
       "NODE_ENV": "production"
    }
 }]
}